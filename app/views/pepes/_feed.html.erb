<div class="row">
  <% @pepes.each do |pepe| %>
    <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3">
      <div class="thumbnail">
        <%= image_tag pepe.image.url(:medium) %>
        <div class="caption">
          <h3><%= pepe.title %></h3>
          <p><%= pepe.description %></p>
          <p>
            <%= link_to "Show Me Pepe", pepe_path(pepe), class: 'btn btn-sm btn-primary' %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>