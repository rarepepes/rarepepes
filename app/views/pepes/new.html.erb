<h2>Upload Your Pepe</h2>

<div class="row">
  <div class="col-sm-5">
    <%= form_for @pepe do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit "Upload Pepe", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>